<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/dialog_edit_subject_label" />
    <EditText android:id="@+id/dialog_subject"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="text"
              android:maxLines="1"
              android:hint="@string/dialog_edit_subject_hint" />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/dialog_edit_time_label" />
    <EditText android:id="@+id/dialog_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="text"
              android:maxLines="1"
              android:hint="@string/dialog_edit_time_hint" />
</LinearLayout>