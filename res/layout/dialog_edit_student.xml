<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dialog_edit_student_num_label" />
        <EditText android:id="@+id/dialog_student_num"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="number"
                  android:maxLines="1"
                  android:hint="@string/dialog_edit_student_num_hint" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dialog_edit_student_no_label" />
        <EditText android:id="@+id/dialog_student_no"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textCapCharacters"
                  android:digits="@string/alphabet_and_number"
                  android:maxLines="1"
                  android:hint="@string/dialog_edit_student_no_hint" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dialog_edit_class_name_label" />
        <EditText android:id="@+id/dialog_class_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textCapCharacters"
                  android:digits="@string/alphabet_and_number"
                  android:maxLines="1"
                  android:hint="@string/dialog_edit_class_name_hint" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dialog_edit_student_name_label" />
        <EditText android:id="@+id/dialog_student_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:maxLines="1"
                  android:hint="@string/dialog_edit_student_name_hint" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dialog_edit_student_ruby_label" />
        <EditText android:id="@+id/dialog_student_ruby"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="text"
                  android:maxLines="1"
                  android:hint="@string/dialog_edit_student_ruby_hint" />
    </LinearLayout>
</ScrollView>